{
  "name": "swift-inbox-server",
  "image": "node:22-alpine",
  "workspaceFolder": "/app",
  "mounts": [
    "source=/d/Web Development/Personal Projects/swift-inbox/server,target=/app,type=bind",
    "source=logs,target=/app/logs,type=volume",
    "target=/app/node_modules,type=volume"
  ],
  "runArgs": [
    "--name",
    "swift-inbox-server",
    "-p",
    "5000:5000",
    "--rm",
    "--env-file",
    "./.env"
  ],
  "postCreateCommand": "npm install"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  userEmail   String
  displayName String?
  tempMail    String
  role        String    @default("user")
  address     String    @default("N/A")
  country     String    @default("N/A")
  dateOfBirth DateTime?
  phoneNumber String    @default("N/A")
}
